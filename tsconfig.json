{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"], // Exclude DOM globals
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@package": ["./package.json"]
    }
  },
  "include": ["src/**/*"]
}
